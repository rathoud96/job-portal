<%- include('../partials/header'); %>

<div class="container">
  <h1>Schedule interview</h1>
  <form action="/company/<%= company._id %>/applicantInterview/<%= applicant._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Stage</label>
      <input type="text" class="form-control" name="stage" rows="3">
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Feedback</label>
      <textarea type="text" class="form-control" name="feedback" rows="3" ></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include('../partials/footer'); %>