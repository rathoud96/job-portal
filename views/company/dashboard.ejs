<%- include('../partials/header'); %>
<h1><%= company.companyName %></h1>

<div class="container">
  <div class="col-md-3 col-sm-6">
    <% company.applicants.forEach(function(applicant){ %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= applicant.name %></h5>
          <p class="card-text"><%= applicant.jobSummary %></p>
          <form action="/company/<%= company._id %>?_method=PUT" method="POST">
            <div class="form-group" style="display: none;">
              <label for="exampleInputEmail1">Username</label>
              <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter username">
            </div>
            <div class="form-group" style="display: none;">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Apply</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/footer'); %>