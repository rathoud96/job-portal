<%- include('../partials/header'); %>

<div class="container">
    <div class="row text-center " style="display:flex; flex-wrap:wrap;">
    <% companies.forEach(function(company){ %>
      <div class="col-md-3 col-sm-6" style="margin: 10px;">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h3 class="card-title"><%= company.companyName %></h3>
          <p class="card-text"><%= company.jobDescription %></p>
          <form action="/company/<%= company._id %>?_method=PUT" method="POST">
            <div class="form-group" style="display: none;">
              <label for="exampleInputEmail1">Username</label>
              <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter username">
            </div>
            <div class="form-group" style="display: none;">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Apply</button>
          </form>
        </div>
      </div>
      </div>
    <% }) %>
    </div>
  </div>
</div>
<%- include('../partials/footer'); %>